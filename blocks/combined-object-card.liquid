<div class="{{ block.settings | class_list }}" {{ block.shopify_attributes }}>
  {% style %}
    #shopify-block-{{ block.id }} img  {
      aspect-ratio: {{ block.settings.ratio }};
    }
  {% endstyle %}

  {% liquid
    # note no standard way to get object type https://shopify.dev/docs/api/liquid/objects/link#link-type
    # assign listing_object = block.settings.product | default: block.settings.collection
    if block.settings.product != blank
      assign product = block.settings.product
    endif
    if block.settings.collection != blank
      assign collection = block.settings.collection
    endif
    assign listing_object = product | default: collection
  %}

  {% if listing_object != blank %}
    <div class="resource-card__image-wrapper">
      {%- if listing_object.featured_image -%}
        {{
          listing_object.featured_image
          | image_url: width: 1000
          | image_tag: widths: '200, 400, 800, 1000'
        }}
      {%- endif -%}
    </div>
    <a href="{{ listing_object.url }}" class="link{%- if collection -%}--with-icon {% endif %}">
      {{ listing_object.title }}
    </a>
    {%- if product -%}<p>{{ listing_object.price | money_with_currency }}</p>{%- endif -%}
  {%- else -%}
    <div
      class="resource-card__image-wrapper placeholder-image"
      style="aspect-ratio:{% if block.settings.ratio == 'auto' %}1{% else %}{{ block.settings.ratio }}{% endif %};"
    >
      {{ 'product-apparel-1' | placeholder_svg_tag: 'product-placeholder-svg' }}
    </div>
    <a href="#" class="link">Example product title </a>
    <p>{{ 1999 | money_with_currency }}</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Product card",
  "tag": null,
  "class": "resource-card",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "style.size_panel",
      "id": "size",
      "label": "Size",
      "default": {
        "width": "100%",
        "flex-grow": "1"
      }
    },
    {
      "type": "style.spacing_panel",
      "id": "spacing",
      "label": "Spacing"
    },
    {
      "type": "paragraph",
      "content": "Width is automatically optimized for mobile."
    },
    {
      "type": "select",
      "id": "ratio",
      "label": "Image ratio",
      "options": [
        {
          "value": "auto",
          "label": "Adapt to image"
        },
        {
          "value": "1",
          "label": "Square"
        },
        {
          "value": "16 / 9",
          "label": "Landscape"
        },
        {
          "value": "2 / 3",
          "label": "Portrait"
        }
      ],
      "default": "auto"
    }
  ],
  "presets": [{ "name": "Product card" }]
}
{% endschema %}
